@using MeuBlog.Shared.Domain
@model MeuBlog.Shared.Domain.Post

@{
    ViewData["Title"] = "Post";
}

<div class="col-lg-12">    
    <article>        
        <header class="mb-4">            
            <a asp-action="Edit" asp-route-id="@Model!.Id" class="btn btn-info"><spam class="fa fa-pencil-alt"></spam></a>
            <a asp-action="Delete" asp-route-id="@Model!.Id" class="btn btn-danger"><spam class="fa fa-trash"></spam></a>
            <h1 class="fw-bolder mb-1">@Model.Titulo</h1>            
            <div class="text-muted fst-italic mb-2">Postado em @Model.DataPublicacao.ToString() por @Model.Autor!.Nome</div>
        </header>        
        <section class="mb-5">
            @Model.Descricao
        </section>
    </article>    
    <section class="mb-5">
        <div class="card bg-light">
            <div class="card-body">               
                @await Component.InvokeAsync("CriarComentarioEmPost", new { postId = Model!.Id })                    
                @await Component.InvokeAsync("ListaComentariosDePost", new { postId = Model!.Id })
            </div>
        </div>
    </section>
</div>