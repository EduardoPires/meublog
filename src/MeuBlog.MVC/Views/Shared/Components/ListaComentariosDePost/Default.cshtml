@model IEnumerable<MeuBlog.Shared.Domain.Comentario>

@foreach (var comentario in Model)
{
    <div class="d-flex">
        <div class="ms-3">
            <div><b>@comentario.Autor!.Nome</b> em @comentario.DataCriacao.ToString()
                <a asp-action="Edit" asp-controller="Comentarios" asp-route-id="@comentario.Id" class="btn btn-info btn-sm"><spam class="fa fa-pencil-alt fa-sm"></spam></a>
                <a asp-action="Delete" asp-controller="Comentarios" asp-route-id="@comentario.Id" class="btn btn-danger  btn-sm"><spam class="fa fa-trash fa-sm"></spam></a>
            </div>
            @comentario.Descricao
        </div>
    </div>
}