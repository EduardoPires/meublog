@model MeuBlog.Shared.Domain.Comentario

@{
    ViewData["Title"] = "Editar comentário";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <section>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="AutorId" />            
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea rows="3" asp-for="Descricao" class="form-control" ></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-success" />
                <a asp-action="Details" asp-controller="Posts" asp-route-id = "@Model.PostId" class="btn btn-primary">Post</a>
            </div>
        </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
